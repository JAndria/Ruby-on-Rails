<div class="container">
<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you", html: { class: "form-horizontal" }) do %>

    <div class="field form-group row">
      <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>
    </div>      
    <div class="field form-group row">
      <%= label_tag :email, "Email Address", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
    </div>
    <div class="field form-group row">
      <%= label_tag :message, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
      </div>
    </div>      

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag "Send", class:"btn btn-primary"%>
    </div>
  </div>
<% end %>
</div>