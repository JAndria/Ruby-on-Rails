<div class="col-md-3 col-xs-12 item-box">
  <div class="item">
    <p class="item-name"><%= product.name %></p>
    <hr>
    <%= image_tag(product.image_url, class: "img-responsive item-img" ) %>
    <p class="item-price"><span class="toBold">$ <%= number_with_precision(product.price, precision: 2) %></span></p>
    <p class="item-clr"><span class="toBold">Colour: </span><%= product.colour %></p>
    <p class="item-desc"><%= product.description %></p>
    <hr>
    <div class="col-md-4 col-xs-4 item-options show-op">
      <p><%= link_to 'Show', product, class: "option-link" %></p>
    </div>
    <div class="col-md-4 col-xs-4 item-options edit-op">
      <p><%= link_to 'Edit', edit_product_path(product), class: "option-link" %></p>
    </div>
    <div class="col-md-4 col-xs-4 item-options delete-op">
      <p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "option-link" %></p>
    </div>
    <br>
  </div>
</div>
