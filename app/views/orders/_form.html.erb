<div class="container">
<%= form_for(@order, html: { class: "form-horizontal" }) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= f.label :product_id, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :product_id, class:"form-control" %>
    </div>
  </div>
  <div class="field form-group row">
    <%= f.label :user_id, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :user_id, class:"form-control" %>
    </div>
  </div>
  <div class="field form-group row">
    <%= f.label :total, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :total, class:"form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit nil, class:"btn btn-primary"%>
    </div>
  </div>
<% end %>
</div>